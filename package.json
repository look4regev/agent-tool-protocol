{
	"name": "agent-tool-protocol",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"scripts": {
		"build": "nx run-many -t build",
		"dev": "nx run-many -t dev",
		"jest": "node --no-node-snapshot node_modules/.bin/jest",
		"test": "NODE_OPTIONS='--no-node-snapshot' NODE_ENV=test npm run jest -- --testPathIgnorePatterns=packages/atp-compiler --runInBand --forceExit && cd packages/atp-compiler && npm test",
		"test:unit": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- __tests__/unit --runInBand && cd packages/atp-compiler && npm test",
		"test:e2e": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- __tests__/e2e --runInBand --forceExit --testTimeout=120000",
		"test:e2e:runtime": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- __tests__/e2e/runtime --runInBand --forceExit --testTimeout=120000",
		"test:e2e:server": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- __tests__/e2e/server --runInBand --forceExit --testTimeout=120000",
		"test:e2e:client": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- __tests__/e2e/client --runInBand --forceExit --testTimeout=120000",
		"test:e2e:integrations": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- __tests__/e2e/integrations --runInBand --forceExit --testTimeout=120000",
		"test:production": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- __tests__/e2e/runtime/cache-approval.test.ts __tests__/e2e/server/api.test.ts --runInBand --forceExit --testTimeout=120000",
		"test:watch": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- --watch",
		"test:coverage": "NODE_OPTIONS='--no-node-snapshot' npm run jest -- --coverage",
		"lint": "nx run-many -t lint",
		"lint:eslint": "eslint 'packages/**/src/**/*.ts' --max-warnings 0",
		"lint:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
		"clean": "nx run-many -t clean",
		"format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
		"graph": "nx graph",
		"prepare": "husky",
		"prepare:release": "nx release --first-release --skip-publish"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@nx/js": "20.8.2",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/sdk-metrics": "^2.2.0",
		"@opentelemetry/sdk-trace-base": "^2.2.0",
		"@opentelemetry/sdk-trace-node": "^2.2.0",
		"@swc-node/register": "~1.9.1",
		"@swc/core": "~1.5.7",
		"@swc/helpers": "~0.5.11",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"nx": "^20.4.1",
		"prettier": "^3.4.2",
		"ts-jest": "^29.2.5",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@langchain/anthropic": "^0.3.7",
		"@langchain/community": "^0.3.57",
		"@langchain/core": "^0.3.78",
		"@langchain/google-genai": "^0.1.4",
		"@langchain/langgraph": "1.0.0",
		"@langchain/ollama": "^0.1.1",
		"@langchain/openai": "^0.3.14",
		"dotenv": "^17.2.3",
		"ioredis": "^5.8.0",
		"langchain": "^0.3.36",
		"langchainhub": "^0.0.11",
		"nanoid": "^5.0.9",
		"openai": "^6.3.0",
		"zod": "^3.23.8"
	}
}
