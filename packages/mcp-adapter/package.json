{
	"name": "@agent-tool-protocol/mcp-adapter",
	"version": "0.17.13",
	"description": "MCP compatibility adapter for Agent Tool Protocol",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"dev": "tsc -p tsconfig.json --watch",
		"clean": "rm -rf dist *.tsbuildinfo",
		"test": "vitest run",
		"lint": "tsc --noEmit"
	},
	"keywords": [
		"agent",
		"protocol",
		"mcp",
		"adapter",
		"ai",
		"llm"
	],
	"license": "MIT",
	"dependencies": {
		"@agent-tool-protocol/protocol": "workspace:*",
		"@agent-tool-protocol/server": "workspace:*",
		"@modelcontextprotocol/sdk": "^0.5.0",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"typescript": "^5.3.3",
		"vitest": "^1.2.1"
	}
}
