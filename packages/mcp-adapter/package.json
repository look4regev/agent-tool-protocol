{
	"name": "@mondaydotcomorg/atp-mcp-adapter",
	"version": "0.18.4",
	"description": "MCP compatibility adapter for Agent Tool Protocol",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mondaycom/agent-tool-protocol",
		"directory": "packages/mcp-adapter"
	},
	"files": [
		"dist",
		"src"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"dev": "tsc -p tsconfig.json --watch",
		"clean": "rm -rf dist *.tsbuildinfo",
		"test": "vitest run",
		"lint": "tsc --noEmit"
	},
	"keywords": [
		"agent",
		"protocol",
		"atp",
		"mcp",
		"adapter",
		"ai",
		"llm"
	],
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^0.5.0",
		"@mondaydotcomorg/atp-protocol": "0.18.3",
		"@mondaydotcomorg/atp-server": "0.18.4",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"typescript": "^5.3.3",
		"vitest": "^1.2.1"
	}
}
